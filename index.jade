doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
		meta(name='renderer' content='webkit')
		meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
		title MusicV
		link(rel='icon' href='favicon.ico' type='image/x-icon')
		link(rel='stylesheet' href='bower_components/normalize.css/normalize.css')
		link(rel='stylesheet' href='bower_components/icomoon/style.css')
		link(rel='stylesheet' href='css/style.css')
		script(src='bower_components/jquery/dist/jquery.min.js')
		script(src='bower_components/d3/d3.min.js')
		script(src='bower_components/mousetrap/mousetrap.min.js')
		script(src='bower_components/id3js/dist/id3.min.js')
		script(src='bower_components/d3.hexbin/hexbin.min.js')
		script(src='js/main.js')

	body
		svg#viz
		#dragover.dragover
		#tooltip.tooltip
		#modal-about.md-modal.md-effect-1
			.md-content
				h3 MusicV
				div(style='line-height: 23px;')
					i.icon-headphones
					p SRTP Project @ZJU

					ul Prowerd by
						li
							a(target='_blank', href='http://d3js.org') d3.js
						li
							a(target='_blank', href='http://www.w3.org/TR/webaudio/') web audio api

					ul Credit
						li
							a(target='_blank', href='http://pillowsky.org') PillowSky - 黄羽众
						li
							a(target='_blank') 胡钟元
						li
							a(target='_blank') 邬放龙

					p This is an experiment project and isn't pretty compatible. Make sure you are using modern web broswer. 

					button.md-close dismiss
		#modal-keyboard.md-modal.md-effect-1
			.md-content
				h3 Keyboard Shortcuts
				div
					i.icon-keyboard
					ul
						li
							a.key(href='#')
								span 1
							|  through 
							a.key(href='#')
								span 7
							|  selects a visualization
						li
							a.key(href='#', style='width: 58px;')
								span space
							|  play / pause
						li
							a.key(href='#')
								span f
							| ull screen
						li
							a.key(href='#')
								span m
							| enu
						li
							a.key(href='#')
								span c
							| hange song
						li
							a.key(href='#')
								span l
							| oop random colors and visualizers
						li
							a.key(href='#')
								span ▲
							a.key(href='#')
								span ▼
							|  cycles vizualization
						li
							a.key(href='#')
								span ◀
							a.key(href='#')
								span ▶
							|  cycles color palettes
					button.md-close dismiss
		.menu.menu-open
			ul
				li#circle.active(viz-num='0')
					.clicker
				li#icosahedron(viz-num='2')
					.clicker
				li#hexbin(viz-num='6')
					.clicker
				li#grid(viz-num='3')
					.clicker
				li#spin(viz-num='5')
					.clicker
				// <li id='voronoi' viz-num='7'></li>
				li.buffer
		.wrapper
			.vinyl-container
				i.icon-vinyl
			#mp3_player.fade
				#audio_box
				i#fullscreen.icon-resize-full-alt
			#progressBar.progressBar
			.song-metadata
			.menu-controls
				i.i.icon-backward2
				i.i.icon-pause
				i.i.icon-forward2
				i.i.icon-microphone(data-hovertext='Connect to the microphone on your computer.')
			.menu-wide
				.options
					i.i.icon-menu
					i.i.icon-question
					i.i.icon-keyboard2
					i.i.icon-expand
				.slider
					span adjust sensitivity
					input#slider(min='1', max='100', value='20', type='range')
				.dotstyle.dotstyle-scaleup
					ul
						li.current
							a.zero(href='#') 0
						li
							a.one(href='#') 1
						li
							a.two(href='#') 2
						li
							a.three(href='#') 3
						li
							a.four(href='#') 4
						li
							a.five(href='#') 5
